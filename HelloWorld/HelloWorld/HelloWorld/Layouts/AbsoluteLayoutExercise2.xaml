<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.Layouts.AbsoluteLayoutExercise2">
    <AbsoluteLayout>
        <Image Source="https://placeimg.com/1920/1080/nature" Aspect="AspectFill"
               AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0, 0, 1, 1"/>
        <Label Text="Relax" FontSize="30" HorizontalTextAlignment="Center"
               AbsoluteLayout.LayoutFlags="SizeProportional" AbsoluteLayout.LayoutBounds="0, 20, 1, 1"/>
        <BoxView BackgroundColor="Black" Opacity="0.5"
                 AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional" AbsoluteLayout.LayoutBounds="0, 1, 1, 100"/>
        <StackLayout Padding="30, 0" Orientation="Horizontal"
                     AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional" AbsoluteLayout.LayoutBounds="0, 1, 1, 100">
            <Label Text="Profile" TextColor="White" FontSize="15" VerticalOptions="Center"/>
            <Label Text="Meditate" TextColor="White" FontSize="15" VerticalOptions="Center" HorizontalOptions="CenterAndExpand"/>
            <Label Text="Themes" TextColor="White" FontSize="15" VerticalOptions="Center"/>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>