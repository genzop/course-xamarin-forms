<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.FormsAndSettings.EntryEditorPage"
             Padding="40">
    <StackLayout>
        <StackLayout>
            <Entry Keyboard="Numeric" Placeholder="Phone"  Completed="Entry_Completed"/>
            <Entry IsPassword="True" TextChanged="Entry_TextChanged"/>
            <Label x:Name="lblCompleted"/>
            <Label x:Name="lblTextChanged"/>
        </StackLayout>
        <Editor BackgroundColor="LightGray" VerticalOptions="FillAndExpand"/>
    </StackLayout>
</ContentPage>